<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Categories -->
    <record id="module_cost_allocation" model="ir.module.category">
        <field name="name">Cost Allocation</field>
        <field name="description">Manage cost allocation and service pricing</field>
        <field name="sequence">16</field>
    </record>

    <!-- User Groups -->
    <record id="group_cost_allocation_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_cost_allocation"/>
        <field name="comment">Basic access to cost allocation - can view allocations and reports</field>
    </record>

    <record id="group_cost_allocation_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_cost_allocation"/>
        <field name="implied_ids" eval="[(4, ref('group_cost_allocation_user'))]"/>
        <field name="comment">Can manage cost pools, drivers, and service catalog</field>
    </record>

    <record id="group_cost_allocation_financial" model="res.groups">
        <field name="name">Financial Manager</field>
        <field name="category_id" ref="module_cost_allocation"/>
        <field name="implied_ids" eval="[(4, ref('group_cost_allocation_manager'))]"/>
        <field name="comment">Can access employee salaries and financial data - only for directors and accountants</field>
    </record>



</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Form Extension -->
    <record id="view_partner_form_it_services" model="ir.ui.view">
        <field name="name">res.partner.form.it.services</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(action_client_service)d" type="action"
                        class="oe_stat_button" icon="fa-gear"
                        context="{'default_client_id': active_id, 'search_default_client_id': active_id}"
                        invisible="not is_company">
                    <field name="service_count" widget="statinfo" string="Services"/>
                </button>
                <button name="%(action_service_subscription)d" type="action"
                        class="oe_stat_button" icon="fa-refresh"
                        context="{'default_client_id': active_id, 'search_default_client_id': active_id}"
                        invisible="not is_company">
                    <field name="subscription_count" widget="statinfo" string="Subscriptions"/>
                </button>
                <button name="%(action_client_allocation)d" type="action"
                        class="oe_stat_button" icon="fa-calculator"
                        context="{'default_client_id': active_id, 'search_default_client_id': active_id}"
                        invisible="not is_company">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="last_monthly_cost" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Monthly Cost</span>
                    </div>
                </button>
            </div>
        </field>
    </record>

    <!-- Partner Tree View Extension -->
    <record id="view_partner_tree_it_services" model="ir.ui.view">
        <field name="name">res.partner.tree.it.services</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="email" position="after">
                <field name="service_count" string="Services" invisible="not is_company"/>
                <field name="last_monthly_cost" widget="monetary" string="Monthly Cost" invisible="not is_company"/>
            </field>
        </field>
    </record>
</odoo>
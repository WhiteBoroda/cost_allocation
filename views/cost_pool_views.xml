<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cost Pool Views -->
    <record id="view_cost_pool_tree" model="ir.ui.view">
        <field name="name">cost.pool.tree</field>
        <field name="model">cost.pool</field>
        <field name="arch" type="xml">
            <tree string="Cost Pools" decoration-info="pool_type=='admin'" decoration-success="pool_type=='indirect'" decoration-warning="pool_type=='direct'">
                <field name="name"/>
                <field name="pool_type" widget="badge"/>
                <!-- ИСПРАВЛЕНО: добавлена группа доступа для зарплат -->
                <field name="total_monthly_cost" widget="monetary"
                       groups="cost_allocation.group_cost_allocation_financial"/>
                <field name="description"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_cost_pool_form" model="ir.ui.view">
        <field name="name">cost.pool.form</field>
        <field name="model">cost.pool</field>
        <field name="arch" type="xml">
            <form string="Cost Pool">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Pool Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="pool_type"/>
                        </group>
                        <group>
                            <!-- ИСПРАВЛЕНО: добавлена группа доступа -->
                            <field name="total_monthly_cost" widget="monetary" readonly="1"
                                   groups="cost_allocation.group_cost_allocation_financial"/>
                        </group>
                    </group>

                    <group>
                        <field name="description" placeholder="Describe what costs are included in this pool..."/>
                    </group>

                    <notebook>
                        <page string="Employee Allocations" groups="cost_allocation.group_cost_allocation_financial">
                            <div class="alert alert-info" role="status">
                                <h4><i class="fa fa-info-circle" title="Information"/> Employee Allocation</h4>
                                <p>Distribute employee costs across this cost pool by percentage of their time.</p>
                                <p><strong>Example:</strong> If an employee spends 50% of time on this pool, enter 50%</p>
                            </div>
                            <field name="allocation_ids">
                                <tree editable="bottom">
                                    <field name="employee_cost_id"/>
                                    <!-- ИСПРАВЛЕНО: убран widget="percentage" чтобы показывать как обычное число -->
                                    <field name="percentage" string="Allocation %"
                                           decoration-bf="percentage == 100"/>
                                    <!-- ИСПРАВЛЕНО: добавлена группа доступа -->
                                    <field name="monthly_cost" widget="monetary" readonly="1"
                                           groups="cost_allocation.group_cost_allocation_financial"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Related Cost Driver">
                            <field name="driver_id">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="driver_category_id"/>
                                    <field name="total_quantity"/>
                                    <!-- ИСПРАВЛЕНО: добавлена группа доступа -->
                                    <field name="cost_per_unit" widget="monetary"
                                           groups="cost_allocation.group_cost_allocation_financial"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_cost_pool_search" model="ir.ui.view">
        <field name="name">cost.pool.search</field>
        <field name="model">cost.pool</field>
        <field name="arch" type="xml">
            <search string="Search Cost Pools">
                <field name="name"/>
                <field name="pool_type"/>
                <separator/>
                <filter string="Direct Costs" name="direct" domain="[('pool_type', '=', 'direct')]"/>
                <filter string="Indirect Costs" name="indirect" domain="[('pool_type', '=', 'indirect')]"/>
                <filter string="Administrative" name="admin" domain="[('pool_type', '=', 'admin')]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <group string="Group By">
                    <filter string="Pool Type" name="group_type" context="{'group_by': 'pool_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_cost_pool" model="ir.actions.act_window">
        <field name="name">Cost Pools</field>
        <field name="res_model">cost.pool</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cost pool!
            </p>
            <p>
                Cost pools group employee salary costs by activity types.
                For example: "Hardware Support", "Software Development", "Administration".
            </p>
            <p>
                <b>Tip:</b> Use the setup wizard to create basic pools for your business type.
            </p>
        </field>
    </record>

</odoo>
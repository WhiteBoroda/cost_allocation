<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Service Subscription Views -->
    <record id="view_client_service_subscription_tree" model="ir.ui.view">
        <field name="name">client.service.subscription.tree</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <tree string="Service Subscriptions" decoration-success="state == 'active'"
                  decoration-muted="state == 'terminated'" decoration-warning="state == 'paused'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="start_date"/>
                <field name="recurring_rule_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="next_invoice_date"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="view_client_service_subscription_form" model="ir.ui.view">
        <field name="name">client.service.subscription.form</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <form string="Service Subscription">
                <header>
                    <button name="action_activate" type="object" string="Activate"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_generate_invoice" type="object" string="Generate Invoice"
                            class="btn-secondary" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,paused,terminated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Subscription Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="recurring_interval"/>
                            <field name="recurring_rule_type"/>
                            <field name="auto_invoice"/>
                            <field name="invoice_day" invisible="recurring_rule_type != 'monthly'"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="next_invoice_date"/>
                        </group>
                        <group>
                            <field name="subscription_id" readonly="1"/>
                            <field name="template_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Lines">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="service_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="total_price" readonly="1" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_client_service_subscription_kanban" model="ir.ui.view">
        <field name="name">client.service.subscription.kanban</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="client_id"/>
                <field name="state"/>
                <field name="total_amount"/>
                <field name="next_invoice_date"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span t-attf-class="o_badge o_badge_pill float-end #{record.state.raw_value == 'active' ? 'badge-success' : (record.state.raw_value == 'paused' ? 'badge-warning' : 'badge-secondary')}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <i class="fa fa-user"/> <field name="client_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-money"/> <field name="total_amount"/> грн/мес
                                </div>
                                <div>
                                    <i class="fa fa-calendar"/> Next: <field name="next_invoice_date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_client_service_subscription_search" model="ir.ui.view">
        <field name="name">client.service.subscription.search</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <search string="Search Subscriptions">
                <field name="name"/>
                <field name="client_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                <separator/>
                <filter string="Due for Invoice" name="due_invoice"
                        domain="[('next_invoice_date', '&lt;=', context_today())]"/>
                <group string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Next Invoice" name="group_invoice" context="{'group_by': 'next_invoice_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_client_service_subscription" model="ir.actions.act_window">
        <field name="name">Service Subscriptions</field>
        <field name="res_model">client.service.subscription</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service subscription!
            </p>
            <p>
                Manage recurring IT services for your clients.
                Automatically generate invoices every month.
            </p>
        </field>
    </record>

    <!-- Cron Job -->
    <record id="cron_generate_subscription_invoices" model="ir.cron">
        <field name="name">Generate Subscription Invoices</field>
        <field name="model_id" ref="model_client_service_subscription"/>
        <field name="state">code</field>
        <field name="code">model.cron_generate_invoices()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
        <field name="nextcall" eval="DateTime.now().replace(hour=9, minute=0, second=0, microsecond=0)"/>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Form Extension -->
    <record id="view_partner_form_cost_allocation" model="ir.ui.view">
        <field name="name">res.partner.form.cost_allocation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="%(action_client_service)d" type="action"
                        class="oe_stat_button" icon="fa-gear"
                        context="{'default_client_id': context.get('active_id'), 'search_default_client_id': context.get('active_id')}"
                        invisible="not is_company">
                    <field name="service_count" widget="statinfo" string="Services"/>
                </button>
                <button name="%(action_client_service_subscription)d" type="action"
                        class="oe_stat_button" icon="fa-refresh"
                        context="{'default_client_id': context.get('active_id'), 'search_default_client_id': context.get('active_id')}"
                        invisible="not is_company">
                    <field name="subscription_count" widget="statinfo" string="Subscriptions"/>
                </button>
                <button name="%(action_client_allocation)d" type="action"
                        class="oe_stat_button" icon="fa-calculator"
                        context="{'default_client_id': context.get('active_id'), 'search_default_client_id': context.get('active_id')}"
                        invisible="not is_company">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field name="last_monthly_cost" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">Monthly Cost</span>
                    </div>
                </button>
            </div>

            <xpath expr="//page[@name='accounting']" position="after">
                <page string="Service Costing" invisible="not is_company">
                    <group>
                        <group string="Cost Drivers">
                            <field name="workstation_count"/>
                            <field name="user_count"/>
                            <field name="server_count"/>
                            <field name="phone_count"/>
                            <field name="printer_count"/>
                        </group>
                        <group string="Cost Analysis">
                            <field name="last_monthly_cost" widget="monetary"/>
                            <field name="last_cost_date"/>
                            <field name="cost_trend" widget="badge"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Services">
                            <field name="client_service_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="service_type_id"/>
                                    <field name="brand"/>
                                    <field name="model"/>
                                    <field name="quantity"/>
                                    <field name="status" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Subscriptions">
                            <field name="subscription_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="state" widget="badge"/>
                                    <field name="start_date"/>
                                    <field name="total_amount" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Cost Allocations">
                            <field name="cost_allocation_ids">
                                <tree>
                                    <field name="period_date"/>
                                    <field name="direct_cost" widget="monetary"/>
                                    <field name="indirect_cost" widget="monetary"/>
                                    <field name="total_cost" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                    <div class="oe_clear">
                        <button name="update_cost_drivers" type="object"
                                string="Update Cost Drivers" class="btn-secondary"/>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Partner Tree View Extension -->
    <record id="view_partner_tree_cost_allocation" model="ir.ui.view">
        <field name="name">res.partner.tree.cost_allocation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='phone']" position="after">
                <field name="service_count" optional="hide"/>
                <field name="last_monthly_cost" widget="monetary" optional="hide"/>
                <field name="cost_trend" widget="badge" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Partner Kanban View Extension -->
    <record id="view_partner_kanban_cost_allocation" model="ir.ui.view">
        <field name="name">res.partner.kanban.cost_allocation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_partner_categories')]" position="after">
                <div class="mt-1" invisible="not is_company or service_count == 0">
                    <span class="badge badge-pill badge-info">
                        <i class="fa fa-cogs" title="Services"/> Services: <field name="service_count"/>
                    </span>
                    <span class="badge badge-pill badge-success" invisible="last_monthly_cost == 0">
                        <i class="fa fa-money" title="Monthly Cost"/> <field name="last_monthly_cost" widget="monetary"/>
                    </span>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Search View Extension -->
    <record id="view_partner_search_cost_allocation" model="ir.ui.view">
        <field name="name">res.partner.search.cost_allocation</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter string="Has Services" name="has_services"
                        domain="[('service_count', '>', 0)]"/>
                <filter string="Active Subscriptions" name="has_subscriptions"
                        domain="[('subscription_count', '>', 0)]"/>
                <filter string="High Cost Clients" name="high_cost"
                        domain="[('last_monthly_cost', '>', 5000)]"/>
                <separator/>
                <filter string="Cost Increasing" name="cost_up"
                        domain="[('cost_trend', '=', 'up')]"/>
                <filter string="Cost Decreasing" name="cost_down"
                        domain="[('cost_trend', '=', 'down')]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Cost Trend" name="group_cost_trend"
                        context="{'group_by': 'cost_trend'}"/>
            </xpath>
        </field>
    </record>

</odoo>
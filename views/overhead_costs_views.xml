<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Company Overhead Cost Views -->
    <record id="view_company_overhead_cost_tree" model="ir.ui.view">
        <field name="name">company.overhead.cost.tree</field>
        <field name="model">company.overhead.cost</field>
        <field name="arch" type="xml">
            <tree string="Company Overhead Costs">
                <field name="name"/>
                <field name="code"/>
                <field name="cost_type"/>
                <!-- НОВОЕ: показываем период и исходную стоимость -->
                <field name="cost_period" string="Period"/>
                <field name="cost_amount" widget="monetary" options="{'currency_field': 'cost_currency_id'}"
                       optional="show"/>
                <field name="cost_currency_id" string="Currency" optional="show"/>
                <field name="monthly_amount" widget="monetary" string="Monthly"/>
                <field name="pool_id"/>
                <field name="allocation_amount" widget="monetary" string="Allocated"/>
                <field name="active" widget="boolean_toggle"/>
                <!-- Скрытые поля для расчетов -->
                <field name="cost_currency_id" column_invisible="1"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Обновляем form view -->
    <record id="view_company_overhead_cost_form" model="ir.ui.view">
        <field name="name">company.overhead.cost.form</field>
        <field name="model">company.overhead.cost</field>
        <field name="arch" type="xml">
            <form string="Company Overhead Cost">
                <!-- ИСПОЛЬЗУЕМ СУЩЕСТВУЮЩИЙ HEADER -->
                <header>
                    <button name="action_activate" type="object" string="Активувати"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_expire" type="object" string="Завершити"
                            class="btn-secondary" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>

                <sheet>
                    <!-- ИСПОЛЬЗУЕМ СУЩЕСТВУЮЩИЙ BUTTON_BOX -->
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-check-circle">
                            <field name="active" widget="boolean_toggle"/>
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Активно</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Назва витрати, наприклад: Оренда офісу"/>
                        </h1>
                    </div>

                    <!-- НОВАЯ СЕКЦИЯ: Original Cost Information -->
                    <group string="Cost Information">
                        <group>
                            <field name="cost_amount" widget="monetary"
                                   options="{'currency_field': 'cost_currency_id'}"/>
                            <field name="cost_currency_id"/>
                            <field name="cost_period"/>
                        </group>
                        <group>
                            <field name="monthly_amount" widget="monetary" readonly="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <div class="alert alert-info mt-3" invisible="cost_period == 'monthly'">
                        <strong>Automatic calculation:</strong>
                        <span invisible="cost_period != 'annual'">Annual cost ÷ 12 = monthly amount</span>
                        <span invisible="cost_period != 'quarterly'">Quarterly cost ÷ 3 = monthly amount</span>
                        <span invisible="cost_period != 'one_time'">One-time cost ÷ 12 = monthly amount</span>
                    </div>

                    <!-- СУЩЕСТВУЮЩИЕ ПОЛЯ -->
                    <group string="Cost Details">
                        <group>
                            <field name="code"/>
                            <field name="cost_type"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="sequence"/>
                        </group>
                    </group>

                    <field name="description" placeholder="Опис витрати (наприклад: FortiNet firewall license for unlimited users)"/>

                    <notebook>
                        <page string="Розподіл витрат">
                            <group>
                                <group>
                                    <field name="pool_id"/>
                                    <field name="allocation_method"/>
                                </group>
                                <group>
                                    <field name="allocation_percentage"
                                           invisible="allocation_method != 'percentage'"/>
                                    <field name="allocation_amount" widget="monetary" readonly="1"/>
                                </group>
                            </group>

                            <!-- Показываем расчеты -->
                            <group string="Allocation Calculation"
                                   invisible="allocation_method != 'percentage'">
                                <div class="o_row">
                                    <span>Monthly Amount: </span>
                                    <field name="monthly_amount" widget="monetary" readonly="1"/>
                                </div>
                                <div class="o_row">
                                    <span>Allocation %: </span>
                                    <field name="allocation_percentage" readonly="1"/>%
                                </div>
                                <div class="o_row">
                                    <span>= Allocated Amount: </span>
                                    <field name="allocation_amount" widget="monetary" readonly="1"/>
                                </div>
                            </group>
                        </page>

                        <!-- НОВАЯ ВКЛАДКА: Cost Analysis -->
                        <page string="Cost Analysis">
                            <group>
                                <group string="Original Purchase">
                                    <field name="cost_amount" widget="monetary" readonly="1"
                                           options="{'currency_field': 'cost_currency_id'}"/>
                                    <field name="cost_currency_id" readonly="1"/>
                                    <field name="cost_period" readonly="1"/>
                                </group>
                                <group string="Company Currency">
                                    <field name="monthly_amount" widget="monetary" readonly="1"/>
                                </group>
                            </group>

                            <!-- Cost Breakdown -->
                            <group string="Cost Summary">
                                <group>
                                    <field name="allocation_amount" widget="monetary" readonly="1"
                                           string="Monthly Allocation"/>
                                    <field name="cost_type" readonly="1"/>
                                </group>
                            </group>

                            <!-- Examples for different periods -->
                            <div class="alert alert-info mt-3" role="status"
                                 invisible="cost_period != 'annual'">
                                <strong>Annual Cost Example:</strong>
                                <p>FortiNet license: €12,000/year automatically becomes €1,000/month for cost allocation</p>
                            </div>

                            <div class="alert alert-success mt-3" role="status"
                                 invisible="cost_period != 'quarterly'">
                                <strong>Quarterly Cost Example:</strong>
                                <p>Insurance payment: €3,000/quarter automatically becomes €1,000/month for cost allocation</p>
                            </div>
                        </page>

                        <page string="Додаткова інформація">
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_company_overhead_cost_search" model="ir.ui.view">
        <field name="name">company.overhead.cost.search</field>
        <field name="model">company.overhead.cost</field>
        <field name="arch" type="xml">
            <search string="Company Overhead Costs">
                <field name="name"/>
                <field name="code"/>
                <field name="cost_type"/>
                <field name="cost_currency_id"/>

                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>

                <!-- НОВЫЕ ФИЛЬТРЫ -->
                <separator/>
                <filter name="monthly" string="Monthly" domain="[('cost_period', '=', 'monthly')]"/>
                <filter name="annual" string="Annual" domain="[('cost_period', '=', 'annual')]"/>
                <filter name="quarterly" string="Quarterly" domain="[('cost_period', '=', 'quarterly')]"/>
                <filter name="licenses" string="Licenses" domain="[('cost_type', '=', 'licenses')]"/>
                <filter name="software" string="Software" domain="[('cost_type', '=', 'software')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_cost_type" string="Cost Type" context="{'group_by': 'cost_type'}"/>
                    <filter name="group_period" string="Period" context="{'group_by': 'cost_period'}"/>
                    <filter name="group_currency" string="Currency" context="{'group_by': 'cost_currency_id'}"/>
                    <filter name="group_pool" string="Pool" context="{'group_by': 'pool_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Extended Cost Pool Form -->
    <record id="view_cost_pool_form_overhead" model="ir.ui.view">
        <field name="name">cost.pool.form.overhead</field>
        <field name="model">cost.pool</field>
        <field name="inherit_id" ref="view_cost_pool_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Overhead Costs">
                    <!-- Compact info header -->
                    <div class="alert alert-info o_form_sheet_bg" role="status" style="margin-bottom: 16px;">
                        <div class="row">
                            <div class="col-md-8">
                                <strong>Overhead Costs:</strong> Additional company expenses allocated to this cost pool
                            </div>
                            <div class="col-md-4 text-right">
                                <strong>Total Overhead:</strong>
                                <field name="total_overhead_cost" widget="monetary" readonly="1" class="text-success"/>
                            </div>
                        </div>
                    </div>

                    <!-- Overhead allocations list -->
                    <field name="overhead_allocation_ids">
                        <tree string="Overhead Allocations" create="false" delete="false">
                            <field name="overhead_cost_id"/>
                            <field name="monthly_cost" widget="monetary"/>
                            <field name="allocation_date"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_company_overhead_cost" model="ir.actions.act_window">
        <field name="name">Company Overhead Costs</field>
        <field name="res_model">company.overhead.cost</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first overhead cost!
            </p>
            <p>
                Track company overhead costs like office rent, utilities, software subscriptions,
                vehicle costs, and other indirect expenses. These costs will be allocated to
                cost pools for proper service pricing.
            </p>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Service Category Views -->
    <record id="view_service_category_tree" model="ir.ui.view">
        <field name="name">service.category.tree</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <tree string="Service Categories">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_type_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_service_category_form" model="ir.ui.view">
        <field name="name">service.category.form</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <form string="Service Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="service_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="service_type_count" readonly="1"/>
                            <field name="active_services_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Category description..."/>
                    <notebook>
                        <page string="Service Types">
                            <field name="service_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="service_type"/>
                                    <field name="base_cost"/>
                                    <field name="sales_price"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Responsible Team">
                            <group>
                                <field name="primary_responsible_id"/>
                            </group>
                            <field name="default_responsible_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Catalog Views -->
    <record id="view_service_catalog_tree" model="ir.ui.view">
        <field name="name">service.catalog.tree</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <tree string="Service Catalog">
                <field name="category_id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_type"/>
                <field name="unit_of_measure"/>
                <field name="base_cost"/>
                <field name="markup_percent"/>
                <field name="sales_price"/>
                <field name="complexity_level"/>
            </tree>
        </field>
    </record>

    <!-- ИСПРАВЛЕННАЯ ФОРМА SERVICE CATALOG -->
    <record id="view_service_catalog_form" model="ir.ui.view">
        <field name="name">service.catalog.form</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="service_type" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="unit_of_measure"/>
                            <field name="complexity_level"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Pricing">
                        <group>
                            <field name="base_cost"/>
                            <field name="markup_percent"/>
                        </group>
                        <group>
                            <field name="sales_price" readonly="1"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Service description..."/>
                    <notebook>
                        <page string="Service Details">
                            <group>
                                <field name="support_hours"/>
                                <field name="sla_response_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_service_catalog_search" model="ir.ui.view">
        <field name="name">service.catalog.search</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="service_type"/>

                <separator/>
                <filter string="Hardware" name="hardware" domain="[('service_type', '=', 'hardware')]"/>
                <filter string="Software" name="software" domain="[('service_type', '=', 'saas')]"/>
                <filter string="Support" name="support" domain="[('service_type', '=', 'support')]"/>
                <filter string="Maintenance" name="maintenance" domain="[('service_type', '=', 'support')]"/>

                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>

                <group expand="1" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Service Type" name="group_service_type" context="{'group_by': 'service_type'}"/>
                    <filter string="Complexity" name="group_complexity" context="{'group_by': 'complexity_level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Catalog Kanban View -->
    <record id="view_service_catalog_kanban" model="ir.ui.view">
        <field name="name">service.catalog.kanban</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="category_id"/>
                <field name="service_type"/>
                <field name="sales_price"/>
                <field name="complexity_level"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <h3><field name="name"/></h3>
                                <p><field name="category_id"/></p>
                                <p>Type: <field name="service_type"/></p>
                                <p>Price: <field name="sales_price"/></p>
                                <p>Level: <field name="complexity_level"/></p>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>
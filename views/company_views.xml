<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Services Wizard Views -->
    <record id="view_bulk_services_wizard_form" model="ir.ui.view">
        <field name="name">bulk.services.wizard.form</field>
        <field name="model">bulk.services.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Add Services">
                <div class="alert alert-info mb-3">
                    <h4><i class="fa fa-magic"/> Bulk Add Services to Clients</h4>
                    <p>Quickly add multiple services to one or more clients using templates or custom selection.</p>
                </div>

                <group>
                    <group string="Target Clients">
                        <field name="client_ids" widget="many2many_tags"
                               placeholder="Select clients to add services to..."
                               options="{'no_create': True}"/>
                    </group>
                    <group string="Service Template">
                        <field name="add_template" widget="radio"/>
                    </group>
                </group>

                <!-- Template Configuration -->
                <group string="Template Configuration" invisible="add_template == 'custom'">
                    <group invisible="add_template != 'workstations'">
                        <field name="workstation_count"/>
                        <field name="user_count"/>
                        <field name="printer_count"/>
                    </group>
                </group>

                <!-- Services to Add -->
                <group string="Services to Add">
                    <field name="service_line_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="service_type_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                            <field name="name" placeholder="Custom name (optional)"/>
                            <field name="quantity"/>
                            <field name="location" placeholder="Office, Server room, etc."/>
                            <field name="auto_assign" widget="boolean_toggle"/>
                            <field name="force_create" widget="boolean_toggle"/>
                        </tree>
                    </field>
                </group>

                <div class="alert alert-warning mt-3" invisible="not service_line_ids">
                    <p><strong>Preview:</strong> This will create <strong><t t-esc="len(service_line_ids)"/> service types</strong>
                       for <strong><t t-esc="len(client_ids)"/> clients</strong>
                       = <strong><t t-esc="len(service_line_ids) * len(client_ids)"/> total services</strong></p>
                    <p><i class="fa fa-info-circle"/> Existing services will have their quantities updated unless "Force Create New" is checked.</p>
                </div>

                <footer>
                    <button name="action_create_services" type="object"
                            string="Create Services" class="btn-primary"
                            confirm="This will create services for all selected clients. Continue?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- NOTE: Action is defined in views/actions.xml to avoid duplication -->

    <!-- Inherit client services tree view to add bulk button -->
    <record id="view_client_service_tree_with_bulk" model="ir.ui.view">
        <field name="name">client.service.tree.with.bulk</field>
        <field name="model">client.service</field>
        <field name="inherit_id" ref="view_client_service_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <header>
                    <button name="%(action_bulk_services_wizard)d" type="action"
                            string="Bulk Add Services" class="btn-primary"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>
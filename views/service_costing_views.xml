<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Cost Calculation Views -->
    <record id="view_service_cost_calculation_tree" model="ir.ui.view">
        <field name="name">service.cost.calculation.tree</field>
        <field name="model">service.cost.calculation</field>
        <field name="arch" type="xml">
            <tree string="Service Cost Calculations">
                <field name="service_catalog_id"/>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="calculation_date"/>
                <field name="calculation_method"/>
                <field name="base_workload_factor"/>
                <field name="effective_workload_factor" decoration-info="effective_workload_factor != base_workload_factor"/>
                <field name="estimated_hours_per_unit" optional="hide"/>
                <field name="actual_units_required" optional="hide"/>
                <field name="direct_cost_per_unit" widget="monetary"/>
                <field name="indirect_cost_per_unit" widget="monetary" optional="hide"/>
                <field name="admin_cost_per_unit" widget="monetary" optional="hide"/>
                <field name="overhead_cost_per_unit" widget="monetary" optional="hide"/>
                <field name="total_cost_per_unit" widget="monetary"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_service_cost_calculation_form" model="ir.ui.view">
        <field name="name">service.cost.calculation.form</field>
        <field name="model">service.cost.calculation</field>
        <field name="arch" type="xml">
            <form string="Service Cost Calculation">
                <header>
                    <!-- ИСПРАВЛЕНО: добавлены атрибуты для обхода валидации -->
                    <button name="action_calculate_costs" type="object" string="Recalculate Costs"
                            class="btn-primary" icon="fa-calculator"
                            save="false" close="false"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="service_catalog_id" readonly="1"/>
                        </h1>
                        <div class="o_row">
                            <field name="calculation_date"/>
                        </div>
                    </div>

                    <group>
                        <group string="Service Information">
                            <!-- ИСПРАВЛЕНО: убрал required="1" -->
                            <field name="client_id"/>
                            <field name="service_type_id" options="{'no_create': True}"/>
                            <field name="base_workload_factor" readonly="1"
                                   help="Base workload factor from service type (complexity/resource requirement)"/>
                            <field name="effective_workload_factor" readonly="1"
                                   decoration-danger="effective_workload_factor > 4.0"
                                   decoration-warning="effective_workload_factor > 2.5 and effective_workload_factor &lt;= 4.0"
                                   decoration-info="effective_workload_factor > base_workload_factor"
                                   decoration-success="effective_workload_factor &lt;= 1.5"
                                   help="Effective workload factor adjusted by client support level. Formula: Base WF × Client Support Multiplier"/>
                        </group>
                        <group string="Total Cost">
                            <field name="total_cost_per_unit" widget="monetary" readonly="1"
                                   class="oe_subtotal_footer_separator"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>

                    <group>
                        <group string="Calculation Parameters">
                            <field name="calculation_method"/>

                            <!-- Time-based fields -->
                            <field name="estimated_hours_per_unit"
                                   invisible="calculation_method != 'time_based'"/>
                            <field name="blended_hourly_rate" widget="monetary" readonly="1"
                                   invisible="calculation_method == 'unit_based'"/>
                        </group>
                        <group>
                            <!-- Unit-based fields -->
                            <field name="base_units_requested"
                                   invisible="calculation_method != 'unit_based'"/>
                            <field name="actual_units_required" readonly="1"
                                   invisible="calculation_method != 'unit_based'"
                                   help="Effective units after applying workload factor. Formula: Base Units × Effective Workload Factor"/>

                            <!-- Complexity-based fields -->
                            <field name="complexity_multiplier"
                                   invisible="calculation_method != 'complexity_based'"/>
                        </group>
                    </group>

                    <group string="Cost Breakdown">
                        <group>
                            <field name="direct_cost_per_unit" widget="monetary" readonly="1"/>
                            <field name="indirect_cost_per_unit" widget="monetary" readonly="1"/>
                        </group>
                        <group>
                            <field name="admin_cost_per_unit" widget="monetary" readonly="1"/>
                            <field name="overhead_cost_per_unit" widget="monetary" readonly="1"/>
                        </group>
                    </group>
<!--
                    <div class="alert alert-info mt-3" role="status">
                        <h5><i class="fa fa-info-circle" title="Information"/> ABC Costing with Workload Factor</h5>
                        <p><strong>Workload Factor:</strong> Multiplies base costs and resource requirements</p>
                        <p><strong>Direct Costs:</strong> Labor costs × workload factor for complexity adjustment</p>
                        <p><strong>Indirect Costs:</strong> Shared resources allocated via cost drivers</p>
                        <p><strong>Admin Costs:</strong> Administrative overhead (typically 15% of direct+indirect)</p>
                        <p><strong>Overhead Costs:</strong> Company expenses (rent, utilities, software, etc.)</p>
                    </div> -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Cost Calculation Search -->
    <record id="view_service_cost_calculation_search" model="ir.ui.view">
        <field name="name">service.cost.calculation.search</field>
        <field name="model">service.cost.calculation</field>
        <field name="arch" type="xml">
            <search string="Search Cost Calculations">
                <field name="service_catalog_id"/>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="calculation_date"/>

                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('calculation_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-01'))]"/>
                <filter string="Time-based" name="time_based" domain="[('calculation_method', '=', 'time_based')]"/>
                <filter string="Unit-based" name="unit_based" domain="[('calculation_method', '=', 'unit_based')]"/>

                <separator/>
                <filter string="Basic Support" name="basic_support" domain="[('client_id.support_level', '=', 'basic')]"/>
                <filter string="Premium Support" name="premium_support" domain="[('client_id.support_level', '=', 'premium')]"/>
                <filter string="Enterprise Support" name="enterprise_support" domain="[('client_id.support_level', '=', 'enterprise')]"/>

                <separator/>
                <filter string="High Base Workload (>2.0)" name="high_base_workload" domain="[('base_workload_factor', '>', 2.0)]"/>
                <filter string="High Effective Workload (>3.0)" name="high_effective_workload" domain="[('effective_workload_factor', '>', 3.0)]"/>
                <filter string="Non-Standard Support" name="workload_adjusted" domain="[('client_id.support_level', '!=', 'standard')]"/>

                <group expand="1" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Service" name="group_service" context="{'group_by': 'service_catalog_id'}"/>
                    <filter string="Service Type" name="group_service_type" context="{'group_by': 'service_type_id'}"/>
                    <filter string="Method" name="group_method" context="{'group_by': 'calculation_method'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'calculation_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_service_cost_calculation" model="ir.actions.act_window">
        <field name="name">Service Cost Calculations</field>
        <field name="res_model">service.cost.calculation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Calculate service costs using ABC methodology with Workload Factors!
            </p>
            <p>
                Use Activity-Based Costing enhanced with workload factors to calculate
                accurate service costs that account for service complexity and resource requirements.
                The workload factor automatically adjusts costs and employee workload distribution.
            </p>
        </field>
    </record>

</odoo>
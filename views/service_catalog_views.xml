<?xml version="1.0" encoding="utf-8"?>
<!-- views/service_catalog_views.xml -->
<odoo>
    <!-- Service Catalog Tree View -->
    <record id="view_service_catalog_tree" model="ir.ui.view">
        <field name="name">service.catalog.tree</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <tree string="Service Catalog" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="service_type_id"/>
                <field name="complexity_level"/>
                <field name="vendor"/>
                <field name="base_cost"/>
                <field name="client_count"/>
                <field name="total_quantity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Service Catalog Form View -->
    <record id="view_service_catalog_form" model="ir.ui.view">
        <field name="name">service.catalog.form</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <form string="Service Catalog">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle"/>
                        </button>
                        <button name="action_view_clients" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="client_count" widget="statinfo" string="Clients"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1" placeholder="Service Name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="service_type_id"/>
                            <field name="category_id" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="complexity_level"/>
                            <field name="base_cost"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_quantity"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>

<!--                        <page string="Technical Details">
                            <group>
                                <group string="Product Information">
                                    <field name="vendor"/>
                                    <field name="model_version"/>
                                    <field name="category"/>
                                </group>
                                <group string="Specifications">
                                    <field name="specifications"/>
                                    <field name="additional_info"/>
                                </group>
                            </group>
                        </page> -->

                        <page string="Cost Analysis">
                            <group>
                                <group string="Base Costs">
                                    <field name="base_cost"/>
                                    <field name="currency_id"/>
                                </group>
                                <group string="Client Statistics">
                                    <field name="client_count" readonly="1"/>
                                    <field name="total_quantity" readonly="1"/>
                                    <field name="average_quantity_per_client" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Catalog Search View -->
    <record id="view_service_catalog_search" model="ir.ui.view">
        <field name="name">service.catalog.search</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <search string="Service Catalog">
                <field name="name"/>
                <field name="code"/>
                <field name="service_type_id"/>
                <field name="vendor"/>

                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <searchpanel>
                    <field name="service_type_id" string="Service Type" select="multi" groupby="service_type"/>
                </searchpanel>

                <separator/>
                <filter name="has_clients" string="Has Clients" domain="[('client_count', '>', 0)]"/>
                <filter name="no_clients" string="No Clients" domain="[('client_count', '=', 0)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" domain="[]" context="{'group_by':'service_type_id'}"/>
                    <filter name="group_vendor" string="Vendor" domain="[]" context="{'group_by':'vendor'}"/>
                    <filter name="group_complexity" string="Complexity" domain="[]" context="{'group_by':'complexity_level'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
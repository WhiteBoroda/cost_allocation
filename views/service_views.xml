<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Employee Cost Views -->
    <record id="view_employee_cost_tree" model="ir.ui.view">
        <field name="name">cost.employee.tree</field>
        <field name="model">cost.employee</field>
        <field name="arch" type="xml">
            <tree string="Employee Costs" decoration-warning="use_manual==True" decoration-info="is_diia_city==True">
                <field name="employee_id"/>
                <field name="monthly_salary" widget="monetary"/>
                <field name="monthly_taxes" widget="monetary"/>
                <field name="monthly_benefits" widget="monetary"/>
                <field name="monthly_hours"/>
                <field name="hourly_cost" widget="monetary"/>
                <field name="is_diia_city" widget="boolean_toggle"/>
                <field name="use_manual" widget="boolean_toggle"/>
                <field name="last_payroll_period"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_cost_form" model="ir.ui.view">
        <field name="name">cost.employee.form</field>
        <field name="model">cost.employee</field>
        <field name="arch" type="xml">
            <form string="Employee Cost">
                <header>
                    <button name="action_update_from_payroll" type="object" string="Update from Contract"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="monthly_hours"/>
                            <field name="use_manual"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="last_payroll_period" readonly="1"/>
                            <field name="hourly_cost" widget="monetary" readonly="1"/>
                            <field name="monthly_total_cost" widget="monetary" readonly="1"/>
                        </group>
                    </group>

                    <group string="Tax Settings">
                        <field name="is_diia_city" readonly="1"/>
                        <field name="is_diia_city_own" string="Dія.City (Manual Setting)"
                               help="Set this if external Dія.City module is not available"/>
                        <field name="minimum_wage" widget="monetary" invisible="not is_diia_city"/>
                    </group>

                    <notebook>
                        <page string="Contract Data" invisible="use_manual">
                            <group>
                                <group>
                                    <field name="monthly_salary" widget="monetary" readonly="1"/>
                                    <field name="monthly_taxes" widget="monetary" readonly="1"/>
                                    <field name="monthly_benefits" widget="monetary" readonly="1"/>
                                </group>
                            </group>
                            <div class="alert alert-info" invisible="not is_diia_city">
                                <strong>Dія.City Tax Calculation:</strong>
                                <ul>
                                    <li>5% Income Tax on full salary</li>
                                    <li>5% Military Tax on full salary</li>
                                    <li>22% ESV on minimum wage (<field name="minimum_wage" readonly="1"/> UAH)</li>
                                </ul>
                            </div>
                            <p class="text-muted" invisible="is_diia_city">
                                Data automatically calculated from employee contract.
                                Standard tax calculation: 22% ESV on full salary.
                            </p>
                        </page>

                        <page string="Manual Override" invisible="not use_manual">
                            <group>
                                <group>
                                    <field name="manual_salary" widget="monetary"/>
                                    <field name="manual_taxes" widget="monetary"/>
                                    <field name="manual_benefits" widget="monetary"/>
                                </group>
                            </group>
                            <p class="text-muted">
                                Manual values override automatic payroll calculation.
                                Enable "Use Manual Values" to use these figures.
                            </p>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Category Views -->
    <record id="view_service_category_form" model="ir.ui.view">
        <field name="name">service.category.form</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <form string="Service Category">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="cost_pool_id"/>
                            <field name="service_type_count" readonly="1"/>
                            <field name="active_services_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="Responsible Team">
                            <group>
                                <field name="primary_responsible_id"/>
                            </group>
                            <field name="default_responsible_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Type Views -->
    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Types">
                <field name="category_id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_type"/>
                <field name="base_price" widget="monetary"/>
                <field name="primary_responsible_id"/>
                <field name="active_services_count"/>
                <field name="support_level"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="service_type"/>
                            <field name="unit_name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="base_price" widget="monetary"/>
                            <field name="support_level"/>
                            <field name="workload_factor"/>
                            <field name="auto_assign_responsible"/>
                            <field name="active_services_count" readonly="1"/>
                            <field name="currency_id" column_invisible="1"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="SLA">
                            <group>
                                <group>
                                    <field name="response_time"/>
                                    <field name="resolution_time"/>
                                </group>
                                <group>
                                    <field name="availability_sla"/>
                                </group>
                            </group>
                        </page>
                        <page string="Responsible Team">
                            <group>
                                <field name="primary_responsible_id"/>
                            </group>
                            <field name="default_responsible_ids" widget="many2many_tags"/>
                            <separator string="Required Skills"/>
                            <field name="required_skill_ids" widget="many2many_tags" invisible="not id"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Client Service Views -->
    <record id="view_client_service_tree" model="ir.ui.view">
        <field name="name">client.service.tree</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <tree string="Client Services"
                  decoration-success="status=='active'"
                  decoration-muted="status=='inactive'"
                  decoration-warning="status=='maintenance'"
                  create_text="Add Service"
                  default_order="client_id, service_type_id">
                <header>
                    <button name="%(action_bulk_services_wizard)d" type="action"
                            string="Bulk Add Services" class="btn-primary"/>
                </header>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="name"/>
                <field name="responsible_employee_id"/>
                <field name="quantity"/>
                <field name="location"/>
                <field name="estimated_monthly_hours"/>
                <field name="status" widget="badge"
                       decoration-success="status=='active'"
                       decoration-warning="status=='maintenance'"
                       decoration-danger="status=='retired'"/>
                <field name="last_maintenance"/>
                <field name="subscription_line_id"/>
                <field name="auto_assigned" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_client_service_form" model="ir.ui.view">
        <field name="name">client.service.form</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <form string="Client Service">
                <header>
                    <field name="status" widget="statusbar" statusbar_visible="active,maintenance,retired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="service_type_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="ip_address"/>
                            <field name="subscription_line_id"/>
                            <field name="estimated_monthly_hours" readonly="1"/>
                        </group>
                    </group>
                    <field name="description"/>
                    <notebook>
                        <page string="Responsible Team">
                            <group>
                                <field name="responsible_employee_id"/>
                                <field name="auto_assigned" readonly="1"/>
                            </group>
                            <field name="support_team_ids" widget="many2many_tags"/>
                        </page>
                        <page string="Technical Details">
                            <group>
                                <group>
                                    <field name="mac_address"/>
                                    <field name="serial_number"/>
                                    <field name="inventory_number"/>
                                </group>
                                <group>
                                    <field name="installation_date"/>
                                    <field name="warranty_end"/>
                                </group>
                            </group>
                        </page>
                        <page string="Maintenance">
                            <group>
                                <group>
                                    <field name="last_maintenance"/>
                                    <field name="next_maintenance"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_client_service_search" model="ir.ui.view">
        <field name="name">client.service.search</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <search string="Search Client Services">
                <field name="name"/>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="responsible_employee_id"/>
                <field name="location"/>

                <separator/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Under Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                <filter string="Retired" name="retired" domain="[('status', '=', 'retired')]"/>

                <separator/>
                <filter string="With Subscription" name="has_subscription"
                        domain="[('subscription_line_id', '!=', False)]"/>
                <filter string="Without Subscription" name="no_subscription"
                        domain="[('subscription_line_id', '=', False)]"/>

                <separator/>
                <filter string="Auto Assigned" name="auto_assigned"
                        domain="[('auto_assigned', '=', True)]"/>
                <filter string="Manual Assignment" name="manual_assigned"
                        domain="[('auto_assigned', '=', False)]"/>

                <separator/>
                <filter string="Maintenance Due" name="maintenance_due"
                        domain="[('next_maintenance', '&lt;=', context_today())]"/>

                <group expand="1" string="Group By">
                    <filter string="Client" name="group_client"
                            context="{'group_by': 'client_id'}"/>
                    <filter string="Service Type" name="group_service_type"
                            context="{'group_by': 'service_type_id'}"/>
                    <filter string="Category" name="group_category"
                            context="{'group_by': 'service_type_id.category_id'}"/>
                    <filter string="Status" name="group_status"
                            context="{'group_by': 'status'}"/>
                    <filter string="Responsible" name="group_responsible"
                            context="{'group_by': 'responsible_employee_id'}"/>
                    <filter string="Location" name="group_location"
                            context="{'group_by': 'location'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Employee Workload Views -->
    <record id="view_employee_workload_tree" model="ir.ui.view">
        <field name="name">employee.workload.tree</field>
        <field name="model">employee.workload</field>
        <field name="arch" type="xml">
            <tree string="Employee Workload" decoration-danger="overloaded==True" decoration-warning="utilization_percentage > 80">
                <field name="employee_id"/>
                <field name="period_date"/>
                <field name="total_services"/>
                <field name="primary_services"/>
                <field name="support_services"/>
                <field name="total_estimated_hours"/>
                <field name="available_hours"/>
                <field name="utilization_percentage" widget="percentage"/>
                <field name="overloaded" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_workload_form" model="ir.ui.view">
        <field name="name">employee.workload.form</field>
        <field name="model">employee.workload</field>
        <field name="arch" type="xml">
            <form string="Employee Workload">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="period_date"/>
                            <field name="available_hours"/>
                        </group>
                        <group>
                            <field name="total_estimated_hours" readonly="1"/>
                            <field name="utilization_percentage" widget="percentage" readonly="1"/>
                            <field name="overloaded" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_services" readonly="1"/>
                            <field name="primary_services" readonly="1"/>
                            <field name="support_services" readonly="1"/>
                        </group>
                    </group>
                    <separator string="Workload by Category"/>
                    <field name="workload_by_category" readonly="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_employee_cost" model="ir.actions.act_window">
        <field name="name">Employee Costs</field>
        <field name="res_model">cost.employee</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure employee hourly costs
            </p>
            <p>
                Employee costs are automatically calculated from contract data.
                The system supports both standard Ukrainian taxes and Dія.City special rates.
                You can manually override values if needed.
            </p>
        </field>
    </record>

    <record id="action_service_category" model="ir.actions.act_window">
        <field name="name">Service Categories</field>
        <field name="res_model">service.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your service categories
            </p>
            <p>
                Define categories for your IT services and assign responsible teams.
                Categories help organize your services and link them to cost pools.
            </p>
        </field>
    </record>

    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your service types
            </p>
            <p>
                Create service types with pricing, SLA, and assign default responsible teams.
                Service types can auto-assign responsible employees to new client services.
            </p>
        </field>
    </record>

    <record id="action_client_service" model="ir.actions.act_window">
        <field name="name">Client Services</field>
        <field name="res_model">client.service</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'client_id'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add client services and equipment
            </p>
            <p>
                Track all IT services and equipment for each client.
                Assign responsible employees and track maintenance schedules.
            </p>
        </field>
    </record>

    <record id="action_employee_workload" model="ir.actions.act_window">
        <field name="name">Employee Workload</field>
        <field name="res_model">employee.workload</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'group_by': 'period_date'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Analyze employee workload
            </p>
            <p>
                Monitor workload distribution across your IT support team.
                Identify overloaded employees and balance the workload.
            </p>
        </field>
    </record>
</odoo>
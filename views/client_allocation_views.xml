<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Cost Allocation Views -->
    <record id="view_client_cost_allocation_tree" model="ir.ui.view">
        <field name="name">client.cost.allocation.tree</field>
        <field name="model">client.cost.allocation</field>
        <field name="arch" type="xml">
            <tree string="Client Cost Allocations" decoration-info="state=='draft'"
                  decoration-success="state=='confirmed'" decoration-warning="state=='calculated'">
                <field name="client_id"/>
                <field name="period_date"/>
                <!-- ИСПРАВЛЕНО: добавлены группы доступа для всех финансовых полей -->
                <field name="direct_cost" widget="monetary"/>
<!--                       groups="cost_allocation.group_cost_allocation_financial"/> -->
                <field name="indirect_cost" widget="monetary"/>
<!--                       groups="cost_allocation.group_cost_allocation_financial"/> -->
                <field name="admin_cost" widget="monetary"/>
<!--                       groups="cost_allocation.group_cost_allocation_financial"/> -->
                <field name="total_cost" widget="monetary"/>
<!--                       groups="cost_allocation.group_cost_allocation_financial"/> -->
                <field name="state" widget="badge"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_client_cost_allocation_form" model="ir.ui.view">
        <field name="name">client.cost.allocation.form</field>
        <field name="model">client.cost.allocation</field>
        <field name="arch" type="xml">
            <form string="Client Cost Allocation">
                <header>
                    <button name="action_calculate_costs" type="object" string="Calculate Costs"
                            class="btn-primary" invisible="state != 'draft'"
                            groups="cost_allocation.group_cost_allocation_financial"/>
                    <button name="action_confirm" type="object" string="Confirm"
                            class="btn-primary" invisible="state != 'calculated'"
                            groups="cost_allocation.group_cost_allocation_financial"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,calculated,confirmed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="client_id" placeholder="Select Client"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="period_date"/>
                        </group>
                        <group>
                            <field name="currency_id" column_invisible="1"/>
                        </group>
                    </group>

                    <!-- ИСПРАВЛЕНО: вся секция Cost Breakdown только для financial группы -->
                    <group string="Cost Breakdown" groups="cost_allocation.group_cost_allocation_financial">
                        <group>
                            <field name="direct_cost" widget="monetary"/>
                            <field name="indirect_cost" widget="monetary"/>
                            <field name="admin_cost" widget="monetary"/>
                        </group>
                        <group>
                            <field name="total_cost" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- ИСПРАВЛЕНО: страница только для financial группы -->
                        <page string="Indirect Costs Detail" invisible="not indirect_cost_ids"
                              groups="cost_allocation.group_cost_allocation_financial">
                            <field name="indirect_cost_ids">
                                <tree>
                                    <field name="driver_id"/>
                                    <field name="quantity"/>
                                    <field name="cost_per_unit" widget="monetary"
                                           groups="cost_allocation.group_cost_allocation_financial"/>
                                    <field name="allocated_cost" widget="monetary"
                                           groups="cost_allocation.group_cost_allocation_financial"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Client Information">
                            <group>
                                <field name="client_id" readonly="1"/>
                                <field name="period_date" readonly="1"/>
                            </group>
                            <div class="alert alert-info" invisible="state != 'draft'">
                                <h4><i class="fa fa-info-circle"/> How it works</h4>
                                <p><strong>Direct Costs:</strong> From project timesheets for this client</p>
                                <p><strong>Indirect Costs:</strong> Distributed based on cost drivers (workstations, users, etc.)</p>
                                <p><strong>Admin Costs:</strong> Administrative overhead distributed proportionally</p>
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_client_cost_allocation_search" model="ir.ui.view">
        <field name="name">client.cost.allocation.search</field>
        <field name="model">client.cost.allocation</field>
        <field name="arch" type="xml">
            <search string="Search Allocations">
                <field name="client_id"/>
                <field name="period_date"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Calculated" name="calculated" domain="[('state', '=', 'calculated')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('period_date', '&gt;=', (context_today() - datetime.timedelta(days=30)).strftime('%Y-%m-01')),
                                 ('period_date', '&lt;=', context_today())]"/>
                <group string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Period" name="group_period" context="{'group_by': 'period_date'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Indirect Cost Views -->
    <record id="view_client_indirect_cost_tree" model="ir.ui.view">
        <field name="name">client.indirect.cost.tree</field>
        <field name="model">client.indirect.cost</field>
        <field name="arch" type="xml">
            <tree string="Indirect Costs" editable="bottom">
                <field name="driver_id"/>
                <field name="quantity"/>
                <!-- ИСПРАВЛЕНО: groups только на полях, не на tree -->
                <field name="cost_per_unit" widget="monetary"
                       groups="cost_allocation.group_cost_allocation_financial"/>
                <field name="allocated_cost" widget="monetary"
                       groups="cost_allocation.group_cost_allocation_financial"/>
            </tree>
        </field>
    </record>

</odoo>
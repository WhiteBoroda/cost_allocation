<?xml version="1.0" encoding="utf-8"?>
<!-- views/actions.xml -->
<odoo>
    <!-- Employee Cost Actions -->
    <record id="action_employee_cost" model="ir.actions.act_window">
        <field name="name">Employee Costs</field>
        <field name="res_model">cost.employee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Cost Pool Actions -->
    <record id="action_cost_pool" model="ir.actions.act_window">
        <field name="name">Cost Pools</field>
        <field name="res_model">cost.pool</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Cost Driver Actions -->
    <record id="action_cost_driver" model="ir.actions.act_window">
        <field name="name">Cost Drivers</field>
        <field name="res_model">cost.driver</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Client Allocation Actions -->
    <record id="action_client_allocation" model="ir.actions.act_window">
        <field name="name">Client Cost Allocations</field>
        <field name="res_model">client.cost.allocation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Service Category Actions -->
    <record id="action_service_category" model="ir.actions.act_window">
        <field name="name">Service Categories</field>
        <field name="res_model">service.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Service Category!
            </p>
            <p>
                Service categories group related service types together.
                They help organize your service catalog and link to cost pools for cost allocation.
            </p>
        </field>
    </record>

    <!-- Service Type Actions -->
    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">Service Types</field>
        <field name="res_model">service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Service Type!
            </p>
            <p>
                Service types define the basic characteristics of services: pricing model,
                unit of measure, SLA parameters, and workload factors.
            </p>
        </field>
    </record>

    <!-- Service Catalog Actions -->
    <record id="action_service_catalog" model="ir.actions.act_window">
        <field name="name">Service Catalog</field>
        <field name="res_model">service.catalog</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Service!
            </p>
            <p>
                The service catalog contains specific service offerings that clients can subscribe to.
                Each catalog item is based on a service type but can have specific pricing and characteristics.
            </p>
        </field>
    </record>

    <!-- Client Service Actions -->
    <record id="action_client_service" model="ir.actions.act_window">
        <field name="name">Client Services</field>
        <field name="res_model">client.service</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first Client Service!
            </p>
            <p>
                Client services represent the actual IT equipment and services
                provided to your clients. Link them to service types and catalog items
                for proper cost allocation and billing.
            </p>
        </field>
    </record>

    <!-- Employee Workload Actions -->
    <record id="action_employee_workload" model="ir.actions.act_window">
        <field name="name">Employee Workload</field>
        <field name="res_model">employee.workload</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create workload analysis!
            </p>
            <p>
                Analyze employee workload distribution across cost pools and client services
                to optimize resource allocation and identify overloaded staff.
            </p>
        </field>
    </record>

    <!-- Client Service Subscription Actions -->
    <record id="action_client_service_subscription" model="ir.actions.act_window">
        <field name="name">Service Subscriptions</field>
        <field name="res_model">client.service.subscription</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service subscription!
            </p>
            <p>
                Manage recurring services for your clients.
                Automatically generate invoices every month.
            </p>
        </field>
    </record>

    <!-- Wizard Actions -->
    <record id="action_allocation_wizard" model="ir.actions.act_window">
        <field name="name">Create Cost Allocations</field>
        <field name="res_model">allocation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="action_service_cost_calculation" model="ir.actions.act_window">
        <field name="name">Service Cost Calculations</field>
        <field name="res_model">service.cost.calculation</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Calculate service costs using ABC methodology!
            </p>
            <p>
                Use Activity-Based Costing to calculate accurate service costs
                including direct labor, indirect costs, administrative overhead,
                and company expenses.
            </p>
        </field>
    </record>

    <!-- Bulk Services Wizard Action -->
    <record id="action_bulk_services_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Add Services</field>
        <field name="res_model">bulk.services.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Company Overhead Cost Action -->
    <record id="action_company_overhead_cost" model="ir.actions.act_window">
        <field name="name">Company Overhead Costs</field>
        <field name="res_model">company.overhead.cost</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Cost Report Wizard -->
    <record id="action_cost_report_wizard" model="ir.actions.act_window">
        <field name="name">Cost Report</field>
        <field name="res_model">cost.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Setup Wizard Action -->
    <record id="action_service_costing_setup_wizard" model="ir.actions.act_window">
        <field name="name">Service Costing Setup</field>
        <field name="res_model">service.costing.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Sequence Configuration Action -->
    <record id="action_sequence_config" model="ir.actions.act_window">
        <field name="name">Sequence Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sequence.config</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure automatic code generation!
            </p>
            <p>
                View and edit sequence configurations for automatic code generation.
                Advanced users can modify numbering patterns and reset counters.
            </p>
        </field>
    </record>

    <!-- Cost Allocation Settings Action -->
    <record id="action_cost_allocation_settings" model="ir.actions.act_window">
        <field name="name">Cost Allocation Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cost.allocation.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'cost_allocation'}</field>
    </record>

    <!-- Holding Companies Action -->
    <record id="action_holding_companies" model="ir.actions.act_window">
        <field name="name">Holding Companies</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="domain">[('is_company', '=', True), ('parent_id', '=', False)]</field>
        <field name="context">{
            'default_is_company': True,
            'search_default_is_company': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add companies to your holding structure!
            </p>
            <p>
                These are the main companies in your holding that you provide services to.
                Use this to manage your holding structure and client relationships.
            </p>
        </field>
    </record>

    <!-- Units of Measure Actions -->
    <record id="action_unit_measure" model="ir.actions.act_window">
        <field name="name">Units of Measure</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">unit.of.measure</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first unit of measure!
            </p>
            <p>
                Units of measure define how quantities are calculated.<br/>
                Examples: Pieces, Hours, Users, Gigabytes, etc.
            </p>
        </field>
    </record>

    <record id="action_unit_measure_category" model="ir.actions.act_window">
        <field name="name">Unit Categories</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">unit.measure.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first unit category!
            </p>
            <p>
                Categories organize units of measure by type.<br/>
                Examples: Time, Quantity, Storage, Users, etc.
            </p>
        </field>
    </record>

    <!-- Cost Driver Category Action -->
    <record id="action_cost_driver_category" model="ir.actions.act_window">
        <field name="name">Driver Categories</field>
        <field name="res_model">cost.driver.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Advanced IR Sequences for cost allocation -->
    <record id="action_ir_sequence_cost_allocation" model="ir.actions.act_window">
        <field name="name">Advanced Sequence Configuration</field>
        <field name="res_model">ir.sequence</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('code', 'in', [
            'service.category.code', 'service.catalog.code', 'service.type.code',
            'client.service.code', 'client.service.subscription.code',
            'cost.pool.code', 'cost.driver.code', 'client.cost.allocation.code'
        ])]</field>
        <field name="context">{'default_implementation': 'standard'}</field>
    </record>

    <record id="action_service_classification" model="ir.actions.act_window">
        <field name="name">Service Classifications</field>
        <field name="res_model">service.classification</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure Service Classifications!
            </p>
            <p>
                Service classifications are used in categories and types to group services.
                You can add, edit, or remove classifications as needed for your business.
            </p>
        </field>
    </record>

</odoo>
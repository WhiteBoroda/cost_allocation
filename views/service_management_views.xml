<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Service Type Views -->
    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Types">
                <field name="category_id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_type"/>
                <field name="unit_id"/>
                <field name="base_price" widget="monetary"/>
                <field name="workload_factor"/>
                <field name="active_services_count"/>
            </tree>
        </field>
    </record>

    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form string="Service Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Type Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="sequence"/>
                            <field name="service_type"/>
                        </group>
                        <group>
                            <field name="unit_id" options="{'no_create': True}"/>
                            <field name="base_price" widget="monetary"/>
                            <field name="workload_factor"
                                   decoration-danger="workload_factor > 3.0"
                                   decoration-warning="workload_factor > 2.0 and workload_factor &lt;= 3.0"
                                   decoration-success="workload_factor &lt;= 1.0"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <group string="Base SLA Parameters">
                        <div class="alert alert-info" role="status">
                            <p><strong>Note:</strong> These are base SLA times. Actual SLA will be determined by each client's support level.</p>
                        </div>
                        <group>
                            <field name="response_time" widget="float_time"/>
                            <field name="resolution_time" widget="float_time"/>
                        </group>
                        <group>
                            <field name="availability_sla"/>
                        </group>
                    </group>

                    <field name="description" placeholder="Describe this service type..."/>

                    <notebook>
                        <page string="Responsible Team">
                            <group>
                                <field name="primary_responsible_id"/>
                                <field name="auto_assign_responsible"/>
                            </group>
                            <field name="default_responsible_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Skills &amp; Requirements">
                            <field name="required_skill_ids" widget="many2many_tags"/>
                        </page>

                        <page string="Statistics">
                            <group>
                                <field name="active_services_count" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_service_type_search" model="ir.ui.view">
        <field name="name">service.type.search</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <search string="Service Types">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="service_type"/>
                <field name="primary_responsible_id"/>

                <filter name="equipment_based" string="Equipment Based" domain="[('service_type','=','equipment')]"/>
                <filter name="user_based" string="User Based" domain="[('service_type','=','user')]"/>
                <filter name="fixed_price" string="Fixed Price" domain="[('service_type','=','fixed')]"/>
                <filter name="consumption_based" string="Consumption Based" domain="[('service_type','=','consumption')]"/>

                <separator/>
                <filter name="low_workload" string="Low Workload (â‰¤1.0)" domain="[('workload_factor', '&lt;=', 1.0)]"/>
                <filter name="medium_workload" string="Medium Workload (1.0-2.0)" domain="[('workload_factor', '>', 1.0), ('workload_factor', '&lt;=', 2.0)]"/>
                <filter name="high_workload" string="High Workload (>2.0)" domain="[('workload_factor', '>', 2.0)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" domain="[]" context="{'group_by':'category_id'}"/>
                    <filter name="group_service_type" string="Service Type" domain="[]" context="{'group_by':'service_type'}"/>
                    <filter name="group_workload" string="Workload Level" domain="[]" context="{'group_by':'workload_factor'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Service Views -->
    <record id="view_client_service_tree" model="ir.ui.view">
        <field name="name">client.service.tree</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <tree string="Client Services">
                <field name="client_id"/>
                <field name="name"/>
                <field name="service_type_id"/>
                <field name="category_id"/>
                <field name="effective_response_time" widget="float_time"/>
                <field name="effective_resolution_time" widget="float_time"/>
                <field name="effective_workload_factor"
                       decoration-info="effective_workload_factor != 1.0"/>
                <field name="quantity"/>
                <field name="status" widget="badge"/>
                <field name="monthly_cost" widget="monetary"/>
                <field name="total_monthly_cost" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="view_client_service_form" model="ir.ui.view">
        <field name="name">client.service.form</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <form string="Client Service">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Service Name"/>
                        </h1>
                        <div class="o_row">
                            <field name="code" readonly="1"/>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="client_id" options="{'no_create': True}"/>
                            <field name="service_type_id" options="{'no_create': True}"/>
                            <field name="category_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="status" widget="badge"/>
                        </group>
                    </group>

                    <group string="SLA &amp; Workload (Client-Adjusted)">
                        <group>
                            <field name="effective_response_time" widget="float_time" readonly="1"/>
                            <field name="effective_resolution_time" widget="float_time" readonly="1"/>
                        </group>
                        <group>
                            <field name="effective_workload_factor" readonly="1"
                                   decoration-warning="effective_workload_factor > 3.0"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Equipment Details">
                            <group>
                                <group>
                                    <field name="location"/>
                                    <field name="brand"/>
                                    <field name="model"/>
                                    <field name="serial_number"/>
                                </group>
                                <group>
                                    <field name="ip_address"/>
                                    <field name="mac_address"/>
                                    <field name="inventory_number"/>
                                </group>
                            </group>

                            <group string="Service Lifecycle">
                                <group>
                                    <field name="installation_date"/>
                                    <field name="warranty_end"/>
                                </group>
                                <group>
                                    <field name="last_maintenance"/>
                                    <field name="next_maintenance"/>
                                </group>
                            </group>
                        </page>

                        <page string="Support Team">
                            <group>
                                <field name="responsible_employee_id"/>
                                <field name="auto_assigned" readonly="1"/>
                            </group>
                            <field name="support_team_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="department_id"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Pricing">
                            <group>
                                <group>
                                    <field name="monthly_cost" widget="monetary"/>
                                    <field name="total_monthly_cost" widget="monetary" readonly="1"/>
                                </group>
                                <group>
                                    <field name="currency_id"/>
                                </group>
                            </group>
                        </page>

                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_client_service_search" model="ir.ui.view">
        <field name="name">client.service.search</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <search string="Client Services">
                <field name="name"/>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="category_id"/>
                <field name="location"/>

                <filter name="active" string="Active" domain="[('status', '=', 'active')]"/>
                <filter name="inactive" string="Inactive" domain="[('status', '=', 'inactive')]"/>
                <filter name="maintenance" string="Under Maintenance" domain="[('status', '=', 'maintenance')]"/>

                <separator/>
                <filter name="high_workload" string="High Workload (>2.0)" domain="[('effective_workload_factor', '>', 2.0)]"/>
                <filter name="workload_adjusted" string="Support Level Adjusted"
                        domain="[('effective_workload_factor', '>', 1.2)]"/>

                <group expand="1" string="Group By">
                    <filter name="group_client" string="Client" context="{'group_by': 'client_id'}"/>
                    <filter name="group_service_type" string="Service Type" context="{'group_by': 'service_type_id'}"/>
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
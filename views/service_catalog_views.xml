<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Service Catalog Tree View -->
    <record id="view_service_catalog_tree" model="ir.ui.view">
        <field name="name">service.catalog.tree</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <tree string="Service Catalog">
                <field name="category_id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="service_type"/>
                <field name="unit_of_measure"/>
                <field name="base_cost" widget="monetary"/>
                <field name="markup_percent"/>
                <field name="sales_price" widget="monetary"/>
                <field name="complexity_level"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_service_catalog_form" model="ir.ui.view">
        <field name="name">service.catalog.form</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <form string="Service">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="category_id"/>
                            <field name="service_type" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="unit_of_measure"/>
                            <field name="complexity_level"/>
                            <field name="currency_id"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group string="Pricing" name="pricing">
                        <group>
                            <field name="base_cost" widget="monetary"/>
                            <field name="markup_percent"/>
                        </group>
                        <group>
                            <field name="sales_price" widget="monetary" readonly="1"/>
                        </group>
                    </group>
                    <group string="Accounting">
                        <field name="property_account_income_id"/>
                    </group>
                    <field name="description" placeholder="Service description..."/>
                    <notebook>
                        <page string="Service Details">
                            <group>
                                <field name="support_hours"/>
                                <field name="sla_response_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_service_catalog_search" model="ir.ui.view">
        <field name="name">service.catalog.search</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <search string="Search Services">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="service_type"/>

                <separator/>
                <filter string="Hardware" name="hardware" domain="[('service_type', '=', 'hardware')]"/>
                <filter string="Software" name="software" domain="[('service_type', '=', 'saas')]"/>
                <filter string="Support" name="support" domain="[('service_type', '=', 'support')]"/>
                <filter string="Infrastructure" name="infrastructure" domain="[('service_type', '=', 'iaas')]"/>

                <separator/>
                <filter string="Low Complexity" name="low_complexity" domain="[('complexity_level', '=', 'low')]"/>
                <filter string="Medium Complexity" name="medium_complexity" domain="[('complexity_level', '=', 'medium')]"/>
                <filter string="High Complexity" name="high_complexity" domain="[('complexity_level', '=', 'high')]"/>

                <group expand="1" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Service Type" name="group_service_type" context="{'group_by': 'service_type'}"/>
                    <filter string="Complexity" name="group_complexity" context="{'group_by': 'complexity_level'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Service Catalog Action -->
    <record id="action_service_catalog" model="ir.actions.act_window">
        <field name="name">Service Catalog</field>
        <field name="res_model">service.catalog</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service!
            </p>
            <p>
                Define services that your company provides to clients.
                Each service can have different pricing models and complexity levels.
            </p>
        </field>
    </record>
</odoo>
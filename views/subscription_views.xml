<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Service Subscription Views -->
    <record id="view_client_service_subscription_tree" model="ir.ui.view">
        <field name="name">client.service.subscription.tree</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <tree string="Service Subscriptions" decoration-success="state == 'active'"
                  decoration-muted="state == 'terminated'" decoration-warning="state == 'paused'">
                <field name="code"/>  <!-- ДОБАВЛЕНО: поле кода -->
                <field name="name"/>
                <field name="client_id"/>
                <field name="start_date"/>
                <field name="recurring_rule_type"/>
                <field name="total_amount" widget="monetary"/>
                <field name="next_invoice_date"/>
                <field name="state" widget="badge"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_client_service_subscription_form" model="ir.ui.view">
        <field name="name">client.service.subscription.form</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <form string="Service Subscription">
                <header>
                    <!-- ИСПРАВЛЕНО: простые кнопки без проблемных методов -->
                    <button name="action_generate_invoice" type="object" string="Generate Invoice"
                            class="btn-primary" invisible="state != 'active'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,paused,terminated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Subscription Name"/>
                        </h1>
                        <h2>
                            <field name="code" readonly="1" class="badge badge-info"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group>
                            <field name="recurring_interval"/>
                            <field name="recurring_rule_type"/>
                            <field name="auto_invoice"/>
                            <field name="invoice_day" invisible="recurring_rule_type != 'monthly'"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id"/>
                            <field name="next_invoice_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Service Lines">
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="service_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="total_price" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Invoicing">
                            <group>
                                <group>
                                    <field name="invoice_count"/>
                                    <field name="total_invoiced" widget="monetary"/>
                                </group>
                                <group>
                                    <button name="action_view_invoices" type="object"
                                            string="View Invoices"
                                            class="btn-secondary"
                                            invisible="invoice_count == 0"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_client_service_subscription_search" model="ir.ui.view">
        <field name="name">client.service.subscription.search</field>
        <field name="model">client.service.subscription</field>
        <field name="arch" type="xml">
            <search string="Search Subscriptions">
                <field name="name"/>
                <field name="client_id"/>

                <separator/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Paused" name="paused" domain="[('state', '=', 'paused')]"/>
                <filter string="Terminated" name="terminated" domain="[('state', '=', 'terminated')]"/>

                <separator/>
                <filter string="Auto Invoice" name="auto_invoice" domain="[('auto_invoice', '=', True)]"/>
                <filter string="This Month" name="this_month"
                        domain="[('start_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01'))]"/>

                <group expand="1" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'state'}"/>
                    <filter string="Recurring Type" name="group_recurring" context="{'group_by': 'recurring_rule_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Service Subscription Line Views -->
    <record id="view_client_service_subscription_line_form" model="ir.ui.view">
        <field name="name">client.service.subscription.line.form</field>
        <field name="model">client.service.subscription.line</field>
        <field name="arch" type="xml">
            <form string="Subscription Line">
                <sheet>
                    <group>
                        <group>
                            <field name="subscription_id"/>
                            <field name="service_id"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="quantity"/>
                            <field name="unit_price" widget="monetary"/>
                            <field name="total_price" widget="monetary"/>
                            <field name="currency_id" column_invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="name" placeholder="Service description..."/>
                    </group>
                    <notebook>
                        <page string="Linked Services">
                            <field name="client_service_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="service_type_id"/>
                                    <field name="quantity"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_client_service_subscription" model="ir.actions.act_window">
        <field name="name">Service Subscriptions</field>
        <field name="res_model">client.service.subscription</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first service subscription!
            </p>
            <p>
                Manage recurring IT services for your clients.
                Automatically generate invoices every month.
            </p>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_service_costing_setup_wizard" model="ir.ui.view">
        <field name="name">service.costing.setup.wizard.form</field>
        <field name="model">service.costing.setup.wizard</field>
        <field name="arch" type="xml">
            <form string="Service Costing Setup">
                <div class="alert alert-info mb-3">
                    <h4>Welcome to Service Costing Module!</h4>
                    <p>This wizard will help you set up the module for your business type. Choose your business category and select what you want to configure.</p>
                </div>

                <group>
                    <group>
                        <field name="company_type" widget="radio"/>
                    </group>
                    <group>
                        <h5>Setup Options:</h5>
                        <field name="setup_employees"/>
                        <field name="setup_pools"/>
                        <field name="setup_drivers"/>
                        <field name="setup_services"/>
                    </group>
                </group>

                <div class="alert alert-warning mt-3" invisible="company_type != 'custom'">
                    <strong>Custom Setup:</strong> You will need to manually configure cost pools, drivers, and service categories after completing this wizard.
                </div>

                <footer>
                    <button name="action_setup_company" type="object" string="Setup Company" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_service_costing_setup_wizard" model="ir.actions.act_window">
        <field name="name">Service Costing Setup</field>
        <field name="res_model">service.costing.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add to menu for initial setup -->
    <menuitem id="menu_setup_wizard"
              name="Setup Wizard"
              parent="menu_cost_allocation_config"
              action="action_service_costing_setup_wizard"
              sequence="5"/>

</odoo>
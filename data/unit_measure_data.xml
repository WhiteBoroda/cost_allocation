<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <!-- Категорії одиниць вимірювання -->
    <record id="unit_category_quantity" model="unit.measure.category">
        <field name="name">Кількість</field>
        <field name="sequence">10</field>
        <field name="description">Загальні одиниці кількості</field>
    </record>

    <record id="unit_category_time" model="unit.measure.category">
        <field name="name">Час</field>
        <field name="sequence">20</field>
        <field name="description">Часові одиниці</field>
    </record>

    <record id="unit_category_storage" model="unit.measure.category">
        <field name="name">Зберігання</field>
        <field name="sequence">30</field>
        <field name="description">Одиниці зберігання даних</field>
    </record>

    <record id="unit_category_users" model="unit.measure.category">
        <field name="name">Користувачі</field>
        <field name="sequence">40</field>
        <field name="description">Користувацькі одиниці</field>
    </record>

    <record id="unit_category_hardware" model="unit.measure.category">
        <field name="name">Обладнання</field>
        <field name="sequence">50</field>
        <field name="description">Одиниці обладнання</field>
    </record>

    <!-- Одиниці кількості -->
    <record id="unit_piece" model="unit.of.measure">
        <field name="name">Штука</field>
        <field name="symbol">ШТ</field>
        <field name="category_id" ref="unit_category_quantity"/>
    </record>

    <record id="unit_unit" model="unit.of.measure">
        <field name="name">Одиниця</field>
        <field name="symbol">Од</field>
        <field name="category_id" ref="unit_category_quantity"/>
    </record>

    <record id="unit_license" model="unit.of.measure">
        <field name="name">Ліцензія</field>
        <field name="symbol">Ліц</field>
        <field name="category_id" ref="unit_category_quantity"/>
    </record>

    <!-- Одиниці часу -->
    <record id="unit_hour" model="unit.of.measure">
        <field name="name">Година</field>
        <field name="symbol">Год</field>
        <field name="category_id" ref="unit_category_time"/>
    </record>

    <record id="unit_month" model="unit.of.measure">
        <field name="name">Місяць</field>
        <field name="symbol">Міс</field>
        <field name="category_id" ref="unit_category_time"/>
    </record>

    <record id="unit_year" model="unit.of.measure">
        <field name="name">Рік</field>
        <field name="symbol">Р</field>
        <field name="category_id" ref="unit_category_time"/>
    </record>

    <!-- Одиниці зберігання -->
    <record id="unit_gigabyte" model="unit.of.measure">
        <field name="name">Гігабайт</field>
        <field name="symbol">ГБ</field>
        <field name="category_id" ref="unit_category_storage"/>
    </record>

    <record id="unit_terabyte" model="unit.of.measure">
        <field name="name">Терабайт</field>
        <field name="symbol">ТБ</field>
        <field name="category_id" ref="unit_category_storage"/>
    </record>

    <!-- Користувацькі одиниці -->
    <record id="unit_user" model="unit.of.measure">
        <field name="name">Користувач</field>
        <field name="symbol">Корист</field>
        <field name="category_id" ref="unit_category_users"/>
    </record>

    <record id="unit_concurrent_user" model="unit.of.measure">
        <field name="name">Одночасний користувач</field>
        <field name="symbol">ОК</field>
        <field name="category_id" ref="unit_category_users"/>
    </record>

    <!-- Одиниці обладнання -->
    <record id="unit_workstation" model="unit.of.measure">
        <field name="name">Робоче місце</field>
        <field name="symbol">РМ</field>
        <field name="category_id" ref="unit_category_hardware"/>
    </record>

    <record id="unit_server" model="unit.of.measure">
        <field name="name">Сервер</field>
        <field name="symbol">Серв</field>
        <field name="category_id" ref="unit_category_hardware"/>
    </record>

    <record id="unit_printer" model="unit.of.measure">
        <field name="name">Принтер</field>
        <field name="symbol">Принт</field>
        <field name="category_id" ref="unit_category_hardware"/>
    </record>

</odoo>
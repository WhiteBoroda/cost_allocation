<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Services Wizard Views -->
    <record id="view_bulk_services_wizard_form" model="ir.ui.view">
        <field name="name">bulk.services.wizard.form</field>
        <field name="model">bulk.services.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Add Services">
                <div class="alert alert-info mb-3">
                    <h4><i class="fa fa-magic"/> Bulk Add Services to Clients</h4>
                    <p>Quickly add multiple services to one or more clients using templates or custom selection.</p>
                </div>

                <group>
                    <group string="Target Clients">
                        <field name="client_ids" widget="many2many_tags"
                               placeholder="Select clients to add services to..."
                               options="{'no_create': True}"/>
                    </group>
                    <group string="Service Template">
                        <field name="add_template" widget="radio"/>
                    </group>
                </group>

                <!-- Template Configuration -->
                <group string="Template Configuration" invisible="[('add_template', '=', 'custom')]">
                    <group invisible="[('add_template', '!=', 'workstations')]">
                        <field name="workstation_count"/>
                        <field name="user_count"/>
                        <field name="printer_count"/>
                    </group>
                </group>

                <!-- Services to Add -->
                <separator string="Services to Add" colspan="2"/>
                <field name="service_line_ids" nolabel="1" colspan="2">
                    <tree string="Services to Add" editable="bottom" create="true" delete="true">
                        <field name="service_type_id"
                               string="Service Type"
                               domain="[('active', '=', True)]"
                               options="{'no_create': True, 'no_open': True}"
                               required="1"/>
                        <field name="name"
                               string="Custom Name"
                               placeholder="Leave empty for default name"/>
                        <field name="quantity"
                               string="Quantity"
                               required="1"/>
                        <field name="location"
                               string="Location"
                               placeholder="Office, Room, etc."/>
                        <field name="auto_assign"
                               string="Auto Team"
                               widget="boolean_toggle"/>
                        <field name="force_create"
                               string="Force New"
                               widget="boolean_toggle"/>
                    </tree>
                </field>

                <div class="alert alert-warning mt-3" invisible="[('service_line_ids', '=', [])]">
                    <p><strong>Preview:</strong> This will create <strong><field name="service_count"/> service types</strong>
                       for <strong><field name="client_count"/> clients</strong>
                       = <strong><field name="total_services"/> total services</strong></p>
                    <p><i class="fa fa-info-circle"/> Existing services will have their quantities updated unless "Force Create New" is checked.</p>
                </div>

                <footer>
                    <button name="action_create_services" type="object"
                            string="Create Services" class="btn-primary"
                            confirm="This will create services for all selected clients. Continue?"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_bulk_services_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Add Services</field>
        <field name="res_model">bulk.services.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_bulk_services_wizard_form"/>
    </record>

</odoo>
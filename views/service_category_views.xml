<?xml version="1.0" encoding="utf-8"?>
<!-- views/service_category_views.xml -->
<odoo>

    <!-- Service Category Tree View -->
    <record id="view_service_category_tree" model="ir.ui.view">
        <field name="name">service.category.tree</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <tree string="Service Categories" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="service_type"/>
                <field name="service_type_count"/>
                <field name="active_services_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Service Category Form View -->
    <record id="view_service_category_form" model="ir.ui.view">
        <field name="name">service.category.form</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <form string="Service Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1" placeholder="Category Name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="service_type"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="cost_pool_id"/>
                            <field name="primary_responsible_id"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>

                        <page string="Default Team">
                            <!-- ИСПРАВЛЕНО: Убрал group wrapper для правильного отображения таблицы -->
                            <field name="default_responsible_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="work_phone"/>
                                    <field name="work_email"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Statistics">
                            <group>
                                <group>
                                    <field name="service_type_count" readonly="1"/>
                                    <field name="active_services_count" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Category Search View -->
    <record id="view_service_category_search" model="ir.ui.view">
        <field name="name">service.category.search</field>
        <field name="model">service.category</field>
        <field name="arch" type="xml">
            <search string="Service Categories">
                <field name="name"/>
                <field name="code"/>
                <field name="service_type"/>
                <field name="primary_responsible_id"/>

                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" domain="[]" context="{'group_by':'service_type'}"/>
                    <filter name="group_responsible" string="Primary Responsible" domain="[]" context="{'group_by':'primary_responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
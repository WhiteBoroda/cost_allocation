<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cost Driver Views -->
    <record id="view_cost_driver_tree" model="ir.ui.view">
        <field name="name">cost.driver.tree</field>
        <field name="model">cost.driver</field>
        <field name="arch" type="xml">
            <tree string="Cost Drivers">
                <field name="name"/>
                <field name="code"/>
                <field name="driver_category"/>
                <field name="unit_id"/>
                <field name="pool_id"/>
                <field name="total_quantity"/>
                <!-- ИСПРАВЛЕНО: добавлена группа доступа -->
                <field name="cost_per_unit" widget="monetary"
                       groups="cost_allocation.group_cost_allocation_financial"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_cost_driver_form" model="ir.ui.view">
        <field name="name">cost.driver.form</field>
        <field name="model">cost.driver</field>
        <field name="arch" type="xml">
            <form string="Cost Driver">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Driver Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="driver_category"/>
                            <field name="unit_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="pool_id"/>
                            <field name="total_quantity"/>
                            <!-- Только поле стоимости скрыто от менеджеров -->
                            <field name="cost_per_unit" widget="monetary"
                                   groups="cost_allocation.group_cost_allocation_financial"/>
                            <field name="currency_id" column_invisible="1"/>
                        </group>
                    </group>

                    <field name="description" placeholder="Describe this cost driver..."/>

                    <notebook>
                        <!-- ИСПРАВЛЕНО: убрана группа доступа с page, менеджеры теперь могут добавлять предприятия -->
                        <page string="Client Values">
                            <div class="alert alert-info" role="status">
                                <h4><i class="fa fa-info-circle" title="Information"/> Cost Driver Values</h4>
                                <p>Set the quantity for each client to determine cost allocation.</p>
                                <p><strong>Example:</strong> For "Workstations" driver, set number of workstations per client</p>
                            </div>
                            <field name="client_driver_ids">
                                <tree editable="bottom">
                                    <field name="client_id"/>
                                    <field name="quantity"/>
                                    <!-- Распределенную стоимость менеджеры МОГУТ видеть -->
                                    <field name="allocated_cost" widget="monetary" readonly="1"/>
                                </tree>
                            </field>
                        </page>

                        <!-- Legacy/Deprecated Tab for compatibility -->
                        <page string="Legacy Settings" groups="base.group_no_one">
                            <div class="alert alert-warning" role="status">
                                <strong>Deprecated Fields</strong>
                                <p>These fields are kept for data migration purposes only.</p>
                            </div>
                            <group>
                                <field name="unit_of_measure" readonly="1"/>
                                <field name="unit_name" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Cost Driver Search View -->
    <record id="view_cost_driver_search" model="ir.ui.view">
        <field name="name">cost.driver.search</field>
        <field name="model">cost.driver</field>
        <field name="arch" type="xml">
            <search string="Cost Drivers">
                <field name="name"/>
                <field name="code"/>
                <field name="driver_category"/>
                <field name="pool_id"/>
                <field name="unit_id"/>

                <filter name="active" string="Active" domain="[('active','=',True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>

                <group expand="0" string="Group By">
                    <filter name="group_category" string="Category" domain="[]" context="{'group_by':'driver_category'}"/>
                    <filter name="group_pool" string="Cost Pool" domain="[]" context="{'group_by':'pool_id'}"/>
                    <filter name="group_unit" string="Unit of Measure" domain="[]" context="{'group_by':'unit_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Cost Driver Views -->
    <record id="view_client_cost_driver_tree" model="ir.ui.view">
        <field name="name">client.cost.driver.tree</field>
        <field name="model">client.cost.driver</field>
        <field name="arch" type="xml">
            <tree string="Client Cost Drivers" editable="bottom">
                <field name="driver_id"/>
                <field name="client_id"/>
                <field name="quantity"/>
                <!-- ИСПРАВЛЕНО: groups только на полях, не на tree -->
                <field name="allocated_cost" widget="monetary" readonly="1"
                       groups="cost_allocation.group_cost_allocation_financial"/>
            </tree>
        </field>
    </record>

</odoo>
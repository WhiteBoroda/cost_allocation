<?xml version="1.0" encoding="utf-8"?>
<!-- views/service_classification_views.xml -->
<odoo>

    <!-- Service Classification Tree View -->
    <record id="view_service_classification_tree" model="ir.ui.view">
        <field name="name">service.classification.tree</field>
        <field name="model">service.classification</field>
        <field name="arch" type="xml">
            <tree string="Service Classifications" editable="bottom" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="icon"/>
                <field name="color" widget="color"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Service Classification Form View -->
    <record id="view_service_classification_form" model="ir.ui.view">
        <field name="name">service.classification.form</field>
        <field name="model">service.classification</field>
        <field name="arch" type="xml">
            <form string="Service Classification">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_toggle" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="icon" invisible="1"/>
                            <i class="fa" t-att-class="'fa ' + record.icon.raw_value" style="margin-right: 10px;"/>
                            <field name="name" placeholder="Classification Name"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="icon" placeholder="fa-gear"/>
                            <field name="color" widget="color"/>
                        </group>
                    </group>

                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
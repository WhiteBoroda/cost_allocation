<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_cost_allocation_settings_form" model="ir.ui.view">
        <field name="name">cost.allocation.settings.form</field>
        <field name="model">cost.allocation.settings</field>
        <field name="arch" type="xml">
            <form string="Cost Allocation Settings" class="oe_form_configuration">
                <header>
                    <button string="Save" type="object" name="execute" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </header>

                <sheet>
                    <div class="app_settings_header" data-key="cost_allocation">
                        <img src="/cost_allocation/static/description/icon.png" alt="Cost Allocation"/>
                        <div class="app_settings_header_title">
                            <h1>Cost Allocation</h1>
                            <p class="lead">Configure cost allocation parameters and methods</p>
                        </div>
                    </div>

                    <div class="row mt-3 o_settings_container">

                        <!-- Auto-generate Codes -->
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="auto_generate_codes" widget="boolean_toggle"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="auto_generate_codes"/>
                                <div class="text-muted">
                                    Automatically generate unique codes for all records
                                </div>
                            </div>
                        </div>

                        <!-- Section Header -->
                        <div class="col-12">
                            <h2>Cost Allocation Methods</h2>
                        </div>

                        <!-- Administrative Cost Method -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="admin_allocation_method" string="Administrative Cost Method"/>
                                <div class="text-muted">
                                    Choose how administrative costs are allocated to services
                                </div>
                                <field name="admin_allocation_method" widget="radio" options="{'horizontal': false}"/>

                                <!-- Percentage input - показывается только при выборе percentage -->
                                <div class="mt-3" invisible="admin_allocation_method != 'percentage'">
                                    <div class="row">
                                        <div class="col-12">
                                            <label for="admin_cost_percentage" class="o_form_label">
                                                Admin Cost Percentage
                                            </label>
                                        </div>
                                        <div class="col-3">
                                            <div class="input-group">
                                                <field name="admin_cost_percentage" class="form-control"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">%</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-muted mt-1">
                                        Percentage of direct + indirect costs allocated as administrative costs
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Overhead Allocation Method -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="overhead_allocation_method" string="Overhead Allocation Method"/>
                                <div class="text-muted">
                                    Method for allocating overhead costs to services
                                </div>
                                <field name="overhead_allocation_method" widget="radio" options="{'horizontal': false}"/>
                            </div>
                        </div>

                        <!-- Section Header -->
                        <div class="col-12">
                            <h2>Working Time Configuration</h2>
                        </div>

                        <!-- Working Hours Method -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="working_hours_method" string="Working Hours Calculation"/>
                                <div class="text-muted">
                                    Method for calculating employee working hours per month
                                </div>
                                <field name="working_hours_method" widget="radio" options="{'horizontal': false}"/>
                            </div>
                        </div>

                        <!-- Employee Utilization Rate -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="utilization_rate" string="Employee Utilization Rate"/>
                                <div class="text-muted">
                                    Expected employee utilization rate for capacity planning
                                </div>
                                <div class="input-group mt-2" style="width: 150px;">
                                    <field name="utilization_rate" class="form-control"/>
                                    <div class="input-group-append">
                                        <span class="input-group-text">%</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Default Working Hours -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="default_working_hours_month" string="Default Working Hours per Month"/>
                                <div class="text-muted">
                                    Default working hours per month (used as fallback)
                                </div>
                                <div class="input-group mt-2" style="width: 150px;">
                                    <field name="default_working_hours_month" class="form-control"/>
                                    <div class="input-group-append">
                                        <span class="input-group-text">hrs</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Default Working Days -->
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="default_working_days_month" string="Default Working Days per Month"/>
                                <div class="text-muted">
                                    Default working days per month (used as fallback)
                                </div>
                                <div class="input-group mt-2" style="width: 150px;">
                                    <field name="default_working_days_month" class="form-control"/>
                                    <div class="input-group-append">
                                        <span class="input-group-text">days</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <!-- Warning Note -->
                    <div class="alert alert-warning mt-3" invisible="admin_allocation_method != 'percentage'">
                        <i class="fa fa-warning"/>
                        <strong>Note:</strong>
                        Changing the administrative cost percentage will affect future cost calculations.
                        Existing allocations will not be automatically recalculated.
                    </div>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cost_allocation_settings" model="ir.actions.act_window">
        <field name="name">Cost Allocation Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cost.allocation.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'cost_allocation'}</field>
    </record>

    <menuitem id="menu_cost_allocation_settings"
              name="Settings"
              parent="menu_cost_allocation_config"
              action="action_cost_allocation_settings"
              sequence="1"/>

</odoo>
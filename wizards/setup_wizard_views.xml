<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_service_costing_setup_wizard" model="ir.ui.view">
        <field name="name">service.costing.setup.wizard.form</field>
        <field name="model">service.costing.setup.wizard</field>
        <field name="arch" type="xml">
            <form string="Service Costing Setup">
                <div class="alert alert-info mb-3">
                    <h4>Ласкаво просимо до модулю вартості послуг!</h4>
                    <p>Цей майстер допоможе вам налаштувати модуль для вашого типу бізнесу. Оберіть категорію вашого бізнесу та виберіть, що ви хочете налаштувати.</p>
                </div>

                <group>
                    <group string="Тип бізнесу">
                        <field name="company_type" widget="radio" nolabel="1"/>
                    </group>
                    <group string="Параметри налаштування">
                        <field name="setup_employees" string="Налаштувати вартість співробітників"/>
                        <field name="setup_pools" string="Налаштувати пули затрат"/>
                        <field name="setup_drivers" string="Налаштувати драйвери затрат"/>
                        <field name="setup_services" string="Налаштувати каталог послуг"/>
                    </group>
                </group>

                <div class="alert alert-warning mt-3" invisible="company_type != 'custom'">
                    <strong>Власне налаштування:</strong> Вам потрібно буде вручну налаштувати пули затрат, драйвери та категорії послуг після завершення цього майстра.
                </div>

                <footer>
                    <button name="action_setup_company" type="object" string="Налаштувати компанію" class="btn-primary"/>
                    <button string="Скасувати" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_service_costing_setup_wizard" model="ir.actions.act_window">
        <field name="name">Service Costing Setup</field>
        <field name="res_model">service.costing.setup.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Add to menu for initial setup -->
    <menuitem id="menu_setup_wizard"
              name="Setup Wizard"
              parent="menu_cost_allocation_config"
              action="action_service_costing_setup_wizard"
              sequence="5"/>

</odoo>
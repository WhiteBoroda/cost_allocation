<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Cost Pool Views -->
    <record id="view_cost_pool_tree" model="ir.ui.view">
        <field name="name">cost.pool.tree</field>
        <field name="model">cost.pool</field>
        <field name="arch" type="xml">
            <tree string="Cost Pools">
                <field name="name"/>
                <field name="pool_type"/>
                <field name="total_monthly_cost" widget="monetary"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="view_cost_pool_form" model="ir.ui.view">
        <field name="name">cost.pool.form</field>
        <field name="model">cost.pool</field>
        <field name="arch" type="xml">
            <form string="Cost Pool">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="pool_type"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="total_monthly_cost" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Pool description..."/>
                    </group>
                    <notebook>
                        <page string="Employee Allocations">
                            <field name="allocation_ids">
                                <tree editable="bottom">
                                    <field name="employee_cost_id"/>
                                    <field name="percentage"/>
                                    <field name="monthly_cost" widget="monetary"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<!-- views/service_catalog_views.xml -->
<odoo>
    <!-- Service Catalog Tree View -->
    <record id="view_service_catalog_tree" model="ir.ui.view">
        <field name="name">service.catalog.tree</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <tree string="Service Catalog" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="service_type_id"/>
                <field name="complexity_level"/>
                <field name="vendor"/>
                <field name="base_cost"/>
                <field name="client_count"/>
                <field name="total_quantity"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Service Catalog Form View -->
    <record id="view_service_catalog_form" model="ir.ui.view">
        <field name="name">service.catalog.form</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <form string="Service Catalog">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                        <button name="action_view_client_services" type="object" class="oe_stat_button" icon="fa-users">
                            <field name="client_count" widget="statinfo" string="Clients"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" required="1" placeholder="Service Name"/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="code" readonly="1"/>
                            <field name="service_type_id"/>
                            <field name="category_id" readonly="1"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="complexity_level"/>
                            <field name="base_cost"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="total_quantity"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>

                        <page string="Technical Details">
                            <group>
                                <group string="Product Information">
                                    <field name="vendor"/>
                                    <field name="model_version"/>
                                </group>
                                <group string="Support">
                                    <field name="support_hours"/>
                                </group>
                            </group>

                            <group string="Technical Specifications">
                                <field name="specifications" nolabel="1"/>
                            </group>
                        </page>

                        <page string="Client Services">
                            <field name="client_service_ids" readonly="1">
                                <tree>
                                    <field name="client_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="status"/>
                                    <field name="installation_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Service Catalog Search View -->
    <record id="view_service_catalog_search" model="ir.ui.view">
        <field name="name">service.catalog.search</field>
        <field name="model">service.catalog</field>
        <field name="arch" type="xml">
            <search string="Service Catalog">
                <field name="name"/>
                <field name="code"/>
                <field name="service_type_id"/>
                <field name="category_id"/>
                <field name="vendor"/>
                <field name="model_version"/>

                <separator/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <separator/>
                <filter name="low_complexity" string="Low Complexity" domain="[('complexity_level', '=', 'low')]"/>
                <filter name="medium_complexity" string="Medium Complexity" domain="[('complexity_level', '=', 'medium')]"/>
                <filter name="high_complexity" string="High Complexity" domain="[('complexity_level', '=', 'high')]"/>
                <filter name="critical_complexity" string="Critical Complexity" domain="[('complexity_level', '=', 'critical')]"/>

                <group expand="0" string="Group By">
                    <filter name="group_service_type" string="Service Type" context="{'group_by': 'service_type_id'}"/>
                    <filter name="group_category" string="Category" context="{'group_by': 'category_id'}"/>
                    <filter name="group_complexity" string="Complexity" context="{'group_by': 'complexity_level'}"/>
                    <filter name="group_vendor" string="Vendor" context="{'group_by': 'vendor'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
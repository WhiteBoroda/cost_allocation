<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Client Service Tree View -->
    <record id="view_client_service_tree" model="ir.ui.view">
        <field name="name">client.service.tree</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <tree string="Client Services"
                  decoration-info="status=='draft'"
                  decoration-success="status=='active'"
                  decoration-warning="status=='maintenance'"
                  decoration-danger="status=='terminated'">
                <field name="client_id"/>
                <field name="name"/>
                <field name="service_type_id"/>
                <field name="category_id"/>
                <field name="quantity"/>
                <field name="responsible_employee_id"/>
                <field name="status" widget="badge"
                       decoration-info="status=='draft'"
                       decoration-success="status=='active'"
                       decoration-warning="status=='maintenance'"
                       decoration-danger="status=='terminated'"/>
                <field name="last_maintenance"/>
                <field name="auto_assigned" column_invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- ИСПРАВЛЕННАЯ ФОРМА CLIENT SERVICE с company_id -->
    <record id="view_client_service_form" model="ir.ui.view">
        <field name="name">client.service.form</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <form string="Client Service">
                <sheet>
                    <group>
                        <group>
                            <field name="client_id"/>
                            <field name="service_type_id"/>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="responsible_employee_id"/>
                            <field name="location"/>
                            <!-- ИСПРАВЛЕНО: добавлено поле company_id -->
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <group>
                                    <field name="description"/>
                                    <field name="auto_assigned"/>
                                </group>
                                <group invisible="[('quantity', '>', 1)]">
                                    <field name="brand"/>
                                    <field name="model"/>
                                    <field name="serial_number"/>
                                    <field name="inventory_number"/>
                                </group>
                            </group>
                        </page>
                        <page string="Technical" invisible="[('quantity', '>', 1)]">
                            <group>
                                <group>
                                    <field name="ip_address"/>
                                    <field name="mac_address"/>
                                </group>
                                <group>
                                    <field name="installation_date"/>
                                    <field name="warranty_end"/>
                                </group>
                            </group>
                        </page>
                        <page string="Maintenance">
                            <group>
                                <group>
                                    <field name="last_maintenance"/>
                                    <field name="next_maintenance"/>
                                </group>
                            </group>
                        </page>
                        <page string="Support Team">
                            <field name="support_team_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_client_service_search" model="ir.ui.view">
        <field name="name">client.service.search</field>
        <field name="model">client.service</field>
        <field name="arch" type="xml">
            <search string="Search Client Services">
                <field name="name"/>
                <field name="client_id"/>
                <field name="service_type_id"/>
                <field name="responsible_employee_id"/>
                <field name="location"/>

                <separator/>
                <filter string="Active" name="active" domain="[('status', '=', 'active')]"/>
                <filter string="Under Maintenance" name="maintenance" domain="[('status', '=', 'maintenance')]"/>
                <filter string="Inactive" name="inactive" domain="[('status', '=', 'inactive')]"/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>

                <separator/>
                <filter string="Auto Assigned" name="auto_assigned" domain="[('auto_assigned', '=', True)]"/>

                <group expand="1" string="Group By">
                    <filter string="Client" name="group_client" context="{'group_by': 'client_id'}"/>
                    <filter string="Service Type" name="group_service_type" context="{'group_by': 'service_type_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Responsible" name="group_responsible" context="{'group_by': 'responsible_employee_id'}"/>
                    <filter string="Status" name="group_status" context="{'group_by': 'status'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Client Service Action -->
    <record id="action_client_service" model="ir.actions.act_window">
        <field name="name">Client Services</field>
        <field name="res_model">client.service</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first client service!
            </p>
            <p>
                Track IT services and equipment provided to your clients.
                Each service can have responsible teams and maintenance schedules.
            </p>
        </field>
    </record>
</odoo>